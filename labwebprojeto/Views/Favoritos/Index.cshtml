@model IEnumerable<labwebprojeto.Models.Favorito>

@{
    ViewData["Title"] = "Favoritos";
}

<body id="bloquear-selecao" class="CategoriasBoddy">
    <main class="classmain">
        <section class="about-favoritos">
            <div class="favoritos">
                <div class="row">
                    <div class="col-md-12 about-rightcena nopadding">
                        <h2>Favourites</h2>
                        <h2>
                            Favourite categories for <strong>@ViewData["userNome"]</strong>.
                        </h2>
                        <div class="searchbar">
                            <form class="d-flex" asp-controller="Favoritos" asp-action="Index" method="get">
                                <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="SearchString">
                                <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
                            </form>
                        </div>

                        <label style="text-align:center;
                                    position:relative;
                                    left:13rem;
                                    top:8rem;">
                            @ViewData["empty_message"]
                        </label>

                        <table class="table" id="Tabela">
                            <thead>
                                <tr>
                                    <th class="category">
                                        Category
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem=>item.IdCategoriaNavigation.Nome)
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@item.IdFavorito"
                                                data-ajax="true" data-ajax-method="get"
                                                data-ajax-mode="replace" data-ajax-update="#Tabela"
                                                data-ajax-confirm="Are you sure?">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="butNew">
                        </div>
                        <div class="paraisto">
                        <a asp-action="Create" asp-controller="Favoritos">
                            <input value="Create a New Favorite" type="button" />
                            </a>
                        </div>
                       
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>