@model labwebprojeto.Models.Favorito

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Favorito</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoriaNavigation.Nome)
        </dd>
        <dt>
            Jogos desta Categoria
        </dt>
        @foreach (var jogo in (IQueryable<string>)ViewData["ListaJogos"])
        {
            <dd>
                @jogo
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
