@model IEnumerable<labwebprojeto.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Biblioteca de 
    @foreach (var item in (List<string>)ViewData["NomeUser"])
    {
        <strong>@item</strong>
    }
</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Data de Compra
            </th>
            <th>
                Jogo
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <!--COMPOR ESTA TABELA-->
            @foreach(var item in Model)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DataCompra)
                </td>
            }
            @foreach (string nome in (List<string>)ViewData["NomeGame"])
            {
                <td>
                    @nome.ToString();
                </td>
            }
            @foreach(var item in Model)
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdCompra">Details</a>
                </td>
            }
    </tr>
    </tbody>
</table>
