@model labwebprojeto.Models.Compra

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<h4>
    Shopping cart for @foreach (string nome in (List<string>)ViewData["NomeUtilizador"])
    {<strong>@nome</strong>}
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <p>@ViewBag.PrecoJogo</p>
            </div>
            <div>
                <p>@ViewBag.NomeJogo</p>
            </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Jogos" asp-action="Index"> Back to Index</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
