@model IEnumerable<labwebprojeto.Models.Jogo>

@{
    ViewData["Title"] = "DetailsConsolas";
}

<partial name="_Notification" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/utadlabwebprojeto.styles.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Syncfusion ASP.NET Core controls styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.38/bootstrap5-dark.css" />
</head>

<body style="background-color:#4618ac">

    <form class="d-flex" asp-controller="Home" asp-action="Index" method="get">
        <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="SearchString">
        <button class="btn" type="submit" value="Filter">Search</button>
    </form>

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Can't Stop</h1>
            <p class="lead">A website <strong> for gamers</strong> by gamers.</p>
            <p>
            </p>
        </div>
    </section>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Foto" width="100%" height="235" alt="Imagem Exemplo">
                        <div class="card-body">
                            <p class="card-text">@item.Nome.ToUpper()</p>
                            @* <h5 class="card-text2">@item.Descricao</h5>*@
                            <input value="@Math.Round(@item.Preco,2)€">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" button asp-controller="Jogos" asp-action="Details" asp-route-id="@item.IdJogos" class="btn btn-sm btn-outline-secondary">
                                        Comprar
                                    </a>
                                    @if ((User.IsInRole("Admin")) || (User.IsInRole("Func")))
                                    {
                                        <a asp-controller="Jogos" asp-action="Edit" asp-route-id="@item.IdJogos" class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
