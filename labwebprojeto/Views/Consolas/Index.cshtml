@model IEnumerable<labwebprojeto.Models.Consola>

@{
    ViewData["Title"] = "Index";
}

<body style="background-color: #004460">
    <main class="classmain">
        <section class="about-login">

            <div class="fartodisto2">
                <div class="row">

                    <div class="col-md-8 about-image nopadding">
                        <h2>Consoles</h2>
                        <img alt="about-image" src="/Images/backgroundfinal.png" />
                    </div>
                    <div class="col-md-4 about-rightcena nopadding">
                        <div class="searchbar">
                            <form class="d-flex" asp-controller="Consolas" asp-action="Index" method="get">
                                <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="SearchString">
                                <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
                            </form>
                        </div>

                        <table class="table">
                            @* <thead>
                            <tr>
                            <th>
                            <h1>Categories</h1>
                            </th>
                            <th></th>
                            </tr>
                            </thead>*@
                            <tbody>
                                
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdConsola">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdConsola">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdConsola">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="butNew">
                            <a asp-controller="Categorias" asp-action="Create" class="btn btn-sm btn-outline-secondary">
                                Create New
                            </a>
                        </div>




                    </div>
                </div>
            </div>
        </section>


    </main>
</body>