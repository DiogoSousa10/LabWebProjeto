@model IEnumerable<labwebprojeto.Models.Consola>

@{
    ViewData["Title"] = "Index";
}

<body class="CategoriasBoddy">
    <main class="classmain">
        <section class="about-login">
            <div class="fartodisto2">
                <div class="row">
                    <div class="col-md-12 about-rightcena nopadding">
                        <h2>Consoles</h2>
                        <div class="searchbar">
                            <form class="d-flex" asp-controller="Consolas" asp-action="Index" method="get">
                                <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="SearchString">
                                <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
                            </form>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Category
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdConsola">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdConsola">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdConsola">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="butNew">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>