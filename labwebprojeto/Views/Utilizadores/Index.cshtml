@model IEnumerable<labwebprojeto.Models.Utilizador>

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        function Save() {
            $('.validation').remove();
            if ($('#inp').val() == '') {
                alert('Please insert a value');
                return false;
            }
        }
    </script>
</head>

<body id="bloquear-selecao" class="CategoriasBoddy">
    <main class="classmain">
        <section class="about-login">
            <div class="fartodisto2">
                <div class="row">
                    <div class="col-md-12 about-rightcena nopadding">
                        <h2>Index</h2>
                        <div class="searchbar">
                            <form class="d-flex" asp-controller="Utilizadores" asp-action="Index" method="get">
                                <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="SearchString">
                                <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
                            </form>
                        </div>
                        <table id="Tabela" class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Role
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.IsAdmin)
                                            {
                                                <label>Admin</label>
                                            }
                                            @if (item.IsFunc)
                                            {
                                                <label>Employee</label>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.IdUtilizador">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Identity/Account/Register" class="nav-link text-dark">Add new User</a>
                        <div class="butNew">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script>
        function sucesso() {
            $("#inp").val("");
        }
    </script>
</body>
